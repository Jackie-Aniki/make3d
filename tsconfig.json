{
  "compilerOptions": {
    "types": ["jest", "node"],
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowJs": true,
    "declaration": true,
    "declarationMap": true,
    "moduleResolution": "node",
    "target": "es2018",
    "module": "none",
    "outDir": "dist",
    "rootDir": "src",
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["src/**/*.spec.ts"]
}
